<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#BDBDBD"
    tools:context=".transcript_teacher">

    <RelativeLayout
        android:background="#FFAB40"
        android:layout_marginBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardtop"
            android:elevation="50dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_margin="4dp"
                android:elevation="10dp"
                android:background="#f9d69f"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:fontFamily="@font/mitr_semibold"
                    android:id="@+id/tranteachterm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:text="ภาคเรียนที่"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:fontFamily="@font/mitr_semibold"
                    android:id="@+id/tranteachnterm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_toEndOf="@+id/tranteachterm"
                    android:layout_toRightOf="@+id/tranteachterm"
                    android:text="2"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/tranteachterm"
                    android:fontFamily="@font/mitr_semibold"
                    android:id="@+id/textclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="ชั้นมัธยมศึกษาปีที่"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/numclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tranteachterm"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/textclass"
                    android:layout_toRightOf="@+id/textclass"
                    android:fontFamily="@font/mitr_semibold"
                    android:text="4/1"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/subjectscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/numclass"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/mitr_semibold"
                    android:text="วิชาคณิตศาสตร์"
                    android:textColor="#000"
                    android:textSize="15dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/cardtop"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="#54432c"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/mitr_semibold"
                    android:textColor="#fff"
                    android:id="@+id/namesubject_ttranre"
                    android:text="ชื่อนามสกุล"
                    android:textSize="17sp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/score_ttranre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="70dp"
                    android:layout_toEndOf="@+id/namesubject_ttranre"
                    android:layout_toRightOf="@+id/namesubject_ttranre"
                    android:fontFamily="@font/mitr_semibold"
                    android:text="เก็บ"
                    android:textColor="#fff"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/score1_ttranre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_toEndOf="@+id/score_ttranre"
                    android:layout_toRightOf="@+id/score_ttranre"
                    android:fontFamily="@font/mitr_semibold"
                    android:text="กลาง"
                    android:textColor="#fff"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/score2_ttranre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toEndOf="@+id/score1_ttranre"
                    android:layout_toRightOf="@+id/score1_ttranre"
                    android:fontFamily="@font/mitr_semibold"
                    android:text="ปลาย"
                    android:textColor="#fff"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/scoresum_ttranre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/score2_ttranre"
                    android:layout_toRightOf="@+id/score2_ttranre"
                    android:fontFamily="@font/mitr_semibold"
                    android:text="รวม"
                    android:textColor="#fff"
                    android:textSize="17sp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@+id/score_ttranre"
                    android:layout_margin="10dp"
                    android:id="@+id/recyclertscore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</FrameLayout>