<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:background="#CBFFFF"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/show"
            android:fontFamily="@font/mitr_semibold"
            android:textColor="#000"
            android:textSize="30sp"
            android:text="9.99"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/detail_idsub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/show"
            android:layout_alignParentTop="true"
            android:layout_marginStart="39dp"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="9dp"
            android:layout_toEndOf="@+id/show"
            android:layout_toRightOf="@+id/show"
            android:fontFamily="@font/mitr_semibold"
            android:gravity="center"
            android:text="9999999"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/detail_namesub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/detail_idsub"
            android:layout_alignBottom="@+id/detail_idsub"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/detail_idsub"
            android:layout_toRightOf="@+id/detail_idsub"
            android:fontFamily="@font/mitr_semibold"
            android:gravity="center"
            android:text="คณิตศาสตร์"
            android:textColor="#000"
            android:textSize="20sp" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>